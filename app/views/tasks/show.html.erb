<h1>Here is your task:</h1>

<p> <strong> Name: </strong> <%= @task.name %></p>
<p><strong> Description: </strong> <%= @task.description %></p>
<p><strong> Deadline: </strong> <%= @task.deadline %></p>
<p><strong> Status (done): </strong> <%= @task.done %></p>

 <button type="button" class="btn btn-primary"><%= link_to('Return to task list', tasks_path) %> </button>
 <button type="button" class="btn btn-primary"><%= link_to('Edit task', edit_task_path) %> </button>

<button type="button" class="btn btn-primary"><%= link_to('Delete task', task_path(@task), method: :delete) %> </button>

